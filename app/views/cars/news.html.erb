<header>
      <div class="page-header">
        <h1>Carros Novos</h1>
      </div>
 </header>

<section id="anuncios" class="row">
<% Car.novos.each do |c| %>
  <% c %>

<div class="col-md-4">
        <div class="thumbnail">
          <%= link_to image_tag("carro01.jpg", class: "img-responsive img-rounded"), c %>
          <div class="caption">
            <h3><%=  link_to "#{c.model}", c %></h3>
            <p>R$ <%= c.value %></p>
            <p>Marca: <%= c.brand %></p>
            <p>Ano: <%= c.year %></p>
            <p>Km: <%= c.km %></p>
            <p>Motor: <%= c.motor %></p>
            <p><a href="detalhes.html" class="btn btn-primary" role="button">Comprar</a></p>
          </div>
        </div>
      </div>
<%end%>

</section>


